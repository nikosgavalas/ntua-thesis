[Unit]
Description=Flink TaskManager Service
Documentation=https://ci.apache.org/projects/flink/flink-docs-stable/
Requires=network.target
After=network.target

[Service]
Type=forking
ExecStart={{ flink_dir }}/bin/taskmanager.sh start
ExecStop={{ flink_dir }}/bin/taskmanager.sh stop
WorkingDirectory={{ flink_dir }}

[Install]
WantedBy=multi-user.target
